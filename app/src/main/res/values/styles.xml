<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeBlack" parent = "AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlack</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkestBlack</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkestBlack</item>
        <item name="colorControlHighlight">#989898</item>
        <item name="android:textColor">@color/colorAccentBlack</item>
        <item name="android:background">@color/colorPrimaryBlack</item>
        <item name="colorAccent">@color/colorAccentBlack</item>
    </style>

    <style name="ThemeGreen" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="android:textColor">@color/colorAccentGreen</item>
        <item name="android:background">@color/colorPrimaryGreen</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkGreen</item>
        <item name="colorControlHighlight">#96FA61</item>
        <item name="colorAccent">@color/colorAccentGreen</item>

    </style>

    <style name="ThemeBlue" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="android:textColor">@color/colorAccentBlue</item>
        <item name="android:background">@color/colorPrimaryBlue</item>
        <item name="colorButtonNormal">@color/colorPrimaryDarkBlue</item>
        <item name="colorControlHighlight">#3F51B5</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="Margin1" parent="AppTheme">
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Margin3" parent="AppTheme">
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Margin10" parent="AppTheme">
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
